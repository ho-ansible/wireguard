[Match]
Name={{ wg_name }}

[Network]
Address={{ wg_ip }}

{{ wg_network_opts | d() }}

{% for subnet in q('inventory_hostnames', wg_peers) | 
     reject('equalto', inventory_hostname) |
     map('extract', hostvars, 'wg_routes') | 
     flatten |
     ipaddr() |
     sort %}
[Route]
Destination={{ subnet }}

{% endfor %}
