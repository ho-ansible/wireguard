# {{ ansible_managed }}

[Match]
Name={{ wg_name }}

[Link]
RequiredForOnline=no

[Network]
Address={{ wg_ip | ansible.utils.ipaddr('address') | ansible.utils.ipaddr('host') }}
{% for dns in wg_dns | d() %}
DNS={{ dns }}
{% endfor %}
{% for domain in wg_domains | d() %}
Domains={{ domain }}
{% endfor %}

{{- wg_network_opts | d() }}

{# Point-to-point routes to peers #}
{% for peer in q('inventory_hostnames', wg_peers) | sort
     if peer != inventory_hostname %}
# {{ peer }}
[Route]
Destination={{ hostvars[peer].wg_ip | ansible.utils.ipaddr('address') }}

{% endfor %}
